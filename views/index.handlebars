<div class="jumbotron">
    <h1 class="title">The Gibeau Gazette</h1>
    <p class="subTitle">Tracking all the latest Disney news.</p>
</div>

{{#each articles}}
<div class="article">
    <h3>
        {{this.headline}}
    </h3>
    <img src="{{this.img}}">
    <a href="{{this.url}}" target="_blank">{{this.url}}</a>
    <p>{{this.summary}}</p>
    <button class="notes" data-toggle="modal" data-title="{{ this.headline }}" data-target="#notesModal" data-id="{{ this._id }}">Notes</button>
</div>

{{/each}}

<div id="notesModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div id="notes"></div>
        <textarea id="noteMessage" placeholder="Insert note here"></textarea>
      </div>
      <div class="modal-footer">
        <button id="addNote" type="button" class="btn btn-primary">Add Note</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
